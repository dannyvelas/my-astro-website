---
import Nav from '../components/Nav.astro';
import '@fontsource-variable/lora';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
    <meta name="description" content="This is a website created by Danny Velasquez for blogging" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
	</head>
	<body class="font-serif">
    <Nav />
    <main class="mx-auto px-4 sm:px-0 sm:max-w-xl md:max-w-2xl lg:max-w-3xl xl:max-w-4xl">
      <slot />
    </main>
	</body>
</html>
