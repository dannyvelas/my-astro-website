---
import BaseLayout from './BaseLayout.astro';

interface Props {
	title: string;
}

const toFriendlyDate = (s: string) => (
  new Date(s).toLocaleDateString("en-us", {month: "long", day: "2-digit", year: "numeric"})
)

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
	<main>
    <article class="flex flex-col gap-4 px-36">
      <header class="flex flex-col gap-4 items-center">
        <h1 class="text-4xl">{frontmatter.title}</h1>
        <h2 class="text-lg text-slate-600">{toFriendlyDate(frontmatter.publishedDate)}</h2>
      </header>
      <slot />
    </article>
	</main>
</BaseLayout>

